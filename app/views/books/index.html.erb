<p id="notice"><%= notice %></p>

<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th> Name </th>
        <th> Notes </th>
        <th colspan="4"> Options </th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        
        <tr>
          <td><%= book.name %></td>
          <td><%= book.notes.length %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Export', export_book_path(book) %></td>
          <% if !book.global? %>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>

<%= link_to 'New Book', new_book_path %>
<%= link_to 'Export all books', export_all_books_path %>
<%= link_to 'Home', root_path %>
