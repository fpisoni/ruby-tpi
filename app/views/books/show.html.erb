<p id="notice"><%= notice %></p>

<h1> Book: <%= @book.name %></h1>


<% if @book.notes.length > 0 %>
    First notes: <!-- Update to pagination -->

    <% @book.notes.first(5).each do |note| %>
        <div>
            <p><b>Title:</b> <%= note.name %></p>
            <div>
                <b>Content:</b>
                <p> <%= note.content.length >= 20 ? "#{note.content.first 40}..." : note.content  %> </p>
            </div>
            <div>
                <%= link_to 'Show note', note_path(note) %> |
                <%= link_to 'Export', export_note_path(note) %>
            </div>
        </div>
    <% end %>
<% else %>
    <div>You have no notes yet on this book</div>
<% end %>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Export', export_book_path(@book) %> |
<%= link_to 'Back', books_path %>
