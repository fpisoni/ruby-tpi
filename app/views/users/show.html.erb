<h2 class="text-center mt-4"> User: </h2>

<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header .bg-light">
                    <p><strong> Email: </strong> <%= @user.email %> </p>
                    <p><strong> Username: </strong> <%= @user.username %> </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-outline-light" %> 
    <%= link_to 'Delete account', @user, method: :delete, data: { confirm: "You can't undo this, are you sure?" }, class: "btn btn-outline-danger" %>
</div>

