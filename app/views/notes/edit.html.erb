<h1 class="text-center mt-4">Editing note: <%= @note.name %></h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'form', note: @note %>
        </div>
    </div>
</div>
<div class="row justify-content-center">
    <%= link_to 'Show', @note, class: "btn btn-outline-light"  %>
    <%= link_to 'Back', notes_path, class: "btn btn-outline-light"  %>
</div>
